<!DOCTYPE html>
<html>
	<head>
	  	<title>Cmstemp</title>
	  	<%= stylesheet_link_tag    "cmstemp/application", media: "all" %>
	  	<%= javascript_include_tag "cmstemp/application" %>
	  	<%= csrf_meta_tags %>
	</head>
	<body>

	<nav class="side-panel">
	    <h1>Cmstemp</h1>
	    <ul>
	      <li>
	        <%= link_to cmstemp.root_path do %>
	          <i class="fa fa-dashboard"></i> Dashboard
	        <% end %>
	      </li>
	    </ul>

	    <ul>
	      <% Cmstemp.configuration.content_classes.each do |class_name| %>
	        <li>
	          <%= link_to class_name.tableize.titleize, entries_path(content_class: class_name.tableize) %>
	        </li>
	      <% end %>
	    </ul>
	</nav>
	<div class="content-wrapper">
		<div class="wrapper wrapper-flash">
			<%= render partial: "cmstemp/shared/flash_messages", flash: flash %>
		</div>

		<%= yield %>
	</div>
	</body>
</html>
